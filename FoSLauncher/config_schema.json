{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "FoSLauncher Configuration Schema",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "description": "Version of the configuration"
        },
        "global": {
            "type": "object",
            "properties": {
                "settings": {
                    "type": "object",
                    "properties": {
                        "theme": {"type": "string", "enum": ["dark", "light"]},
                        "language": {"type": "string"},
                        "auto_update": {"type": "boolean"},
                        "log_level": {"type": "string", "enum": ["DEBUG", "INFO", "WARNING", "ERROR"]}
                    }
                },
                "security": {
                    "type": "object",
                    "properties": {
                        "current_access": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": ["none", "basic", "advanced", "master", "premium"]
                            }
                        },
                        "master_code": {
                            "type": ["string", "null"]
                        }
                    },
                    "required": ["current_access", "master_code"]
                }
            },
            "required": ["security"]
        },
        "modules": {
            "type": "object",
            "patternProperties": {
                "^[a-z][a-z0-9_]*$": {
                    "type": "object",
                    "properties": {
                        "enabled": {"type": "boolean"},
                        "requires_code": {"type": "boolean"},
                        "access_level": {"type": "string"},
                        "description": {"type": "string"},
                        "features": {"type": "object"},
                        "config": {"type": "object"}
                    }
                }
            }
        },
        "plugins": {
            "type": "object",
            "patternProperties": {
                "^[a-z][a-z0-9_]*$": {
                    "type": "object",
                    "properties": {
                        "enabled": {"type": "boolean", "default": true},
                        "base_dir": {"type": "string"},
                        "requires_code": {"type": "boolean", "default": true},
                        "access_level": {"type": "string", "enum": ["none", "basic", "advanced", "master", "premium"]},
                        "settings": {"type": "object"}
                    },
                    "required": ["enabled", "base_dir"]
                }
            }
        },
        "settings": {
            "type": "object",
            "properties": {
                "auto_start_plugins": {"type": "boolean", "default": true},
                "environment": {
                    "type": "string",
                    "enum": ["development", "production"],
                    "default": "development"
                }
            },
            "required": ["auto_start_plugins", "environment"]
        }
    },
    "required": ["plugins", "settings", "global"]
} 