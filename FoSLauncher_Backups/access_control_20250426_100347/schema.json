{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "description": "Access control configuration version"
        },
        "users": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "type": "object",
                    "properties": {
                        "modules": {
                            "type": "object",
                            "patternProperties": {
                                "^.*$": {
                                    "type": "object",
                                    "properties": {
                                        "unlocked": {
                                            "type": "boolean"
                                        },
                                        "features": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "required": ["unlocked", "features"]
                                }
                            }
                        }
                    },
                    "required": ["modules"]
                }
            }
        },
        "access_codes": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "type": "object",
                    "properties": {
                        "code": {
                            "type": "string",
                            "minLength": 8
                        },
                        "modules": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": ["all"]
                            },
                            "additionalItems": {
                                "type": "string"
                            }
                        }
                    },
                    "required": ["code", "modules"]
                }
            }
        }
    },
    "required": ["version", "users", "access_codes"]
} 