{
  "application": {
    "name": "OmniForgeCodex",
    "version": "1.0.0",
    "environment": "development"
  },
  "ui": {
    "theme": "light",
    "language": "en",
    "window": {
      "width": 1024,
      "height": 768,
      "maximized": false
    }
  },
  "logging": {
    "level": "INFO",
    "file_rotation": {
      "max_size": 10485760,
      "backup_count": 5
    }
  },
  "security": {
    "encryption_enabled": true,
    "session_timeout": 3600
  },
  "paths": {
    "data": "data",
    "logs": "logs",
    "temp": "temp"
  }
}