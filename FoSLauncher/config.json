{
    "version": "1.0.0",
    "global": {
        "settings": {
            "theme": "dark",
            "language": "en",
            "auto_update": true,
            "log_level": "INFO"
        },
        "security": {
            "current_access": ["basic"],
            "master_code": null
        }
    },
    "modules": {
        "chatbot_plus": {
            "enabled": true,
            "requires_code": true,
            "access_level": "premium",
            "description": "Enhanced chat interface with YouTube integration",
            "features": {
                "youtube": true,
                "twitch": false,
                "x": false,
                "obs_sync": false
            },
            "config": {
                "youtube": {
                    "client_id": "YOUR_CLIENT_ID",
                    "client_secret": "YOUR_CLIENT_SECRET",
                    "redirect_uri": "http://localhost:8001/oauth2callback"
                }
            }
        },
        "gui": {
            "enabled": true,
            "requires_code": false,
            "access_level": "none",
            "description": "Main launcher interface",
            "features": {
                "dark_mode": true,
                "custom_themes": false
            }
        },
        "chatsplitter": {
            "enabled": true,
            "requires_code": false,
            "access_level": "basic",
            "description": "Chat message splitter utility",
            "features": {
                "basic_export": true,
                "markdown_export": false,
                "branch_visualization": false
            }
        }
    },
    "plugins": {
        "youtube_login": {
            "enabled": true,
            "base_dir": "plugins/youtube_login",
            "requires_code": true,
            "access_level": "basic",
            "settings": {
                "client_secrets_path": "client_secrets.json",
                "token_path": "token.pickle"
            }
        },
        "command_manager": {
            "enabled": true,
            "base_dir": "plugins/command_manager",
            "requires_code": true,
            "access_level": "basic",
            "settings": {
                "commands_file": "commands.json",
                "auto_save": true
            }
        },
        "chatsplitter": {
            "enabled": true,
            "base_dir": "plugins/chatsplitter",
            "requires_code": true,
            "access_level": "basic",
            "settings": {
                "default_output_dir": "output",
                "default_image_dir": "images",
                "max_file_size_mb": 25
            }
        }
    },
    "settings": {
        "auto_start_plugins": true,
        "environment": "development"
    }
} 